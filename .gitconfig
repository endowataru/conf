[core]
    editor = nvim

[alias]
    st = status
    di = diff
    dis = diff --staged
    co = checkout
    sw = switch
    cm = commit

[format]
    pretty = fuller

[log]
    date = iso-local

[user]
    useConfigOnly = true

[branch]
    sort = -authordate

[include]
    path = ~/.gitconfig.local

[pull]
    ff = only
    rebase = true

[diff]
    wsErrorHighlight = all
    colorMoved = zebra

[fetch]
    prune = true

[init]
    defaultBranch = main

[pager]
    log = diffr | less
    show = diffr | less
    diff = diffr | less


